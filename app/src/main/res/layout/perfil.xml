<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#E1DEDE"
    tools:context=".Perfil">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/mapBtn"
                        android:text="Map"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:background="#447144"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_back_arrow"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:onClick="btMap"></Button>
                    <View
                        android:background="@color/white"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"></View>
                    <Button
                        android:id="@+id/perfilBtn"
                        android:text="Perfil"
                        android:padding="5dp"
                        android:background="@color/background"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_back_arrow"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:onClick="btPerfil"></Button>
                    <View
                        android:background="@color/white"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"></View>

                    <Button
                        android:id="@+id/logoutBtn"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1"
                        android:background="@color/background"
                        android:padding="5dp"
                        android:src="@drawable/ic_back_arrow"
                        android:text="Logout"
                        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TextContrastCheck"
                        android:onClick="btLogout"
                        ></Button>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <include
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        layout="@layout/item_image"
        ></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/item_add"></include>

            <include layout="@layout/item_email"></include>
            <include layout="@layout/item_info"></include>
        </LinearLayout>
    </ScrollView>
</LinearLayout>